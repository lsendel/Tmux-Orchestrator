# Tmux Orchestrator Environment Configuration Example
# Copy this file to .env and customize for your environment

# === PATHS AND DIRECTORIES ===
# Base directory for all coding projects
CODING_DIR="$HOME/Coding"

# Claude installation paths (in priority order)
CLAUDE_LOCAL_PATH="$HOME/.claude/local/node_modules/.bin/claude"
CLAUDE_PROJECT_PATH="./node_modules/.bin/claude"
CLAUDE_GLOBAL_PATH="$HOME/.npm-global/bin/claude"

# System paths
LOCAL_BIN_PATH="$HOME/.local/bin"
REGISTRY_BASE="./registry"
REGISTRY_LOGS_DIR="./registry/logs"
REGISTRY_SESSIONS_DIR="./registry/sessions"

# === TIMING CONFIGURATION ===
# Delays in seconds
MESSAGE_DELAY=0.5
CLAUDE_STARTUP_DELAY=5
PM_STARTUP_DELAY=5
COMMAND_EXECUTION_DELAY=1

# Default scheduling time in minutes
DEFAULT_SCHEDULE_MINUTES=3

# === WINDOW CONFIGURATION ===
# Default window names
WINDOW_NAME_AGENT="Claude-Agent"
WINDOW_NAME_SHELL="Shell"
WINDOW_NAME_DEV_SERVER="Dev-Server"
WINDOW_NAME_PM="Project-Manager"

# Default target window for orchestrator
DEFAULT_TARGET_WINDOW="tmux-orc:0"

# === CAPTURE AND DISPLAY LIMITS ===
MAX_CAPTURE_LINES=1000
DEFAULT_CAPTURE_LINES=50
HEALTH_CHECK_LINES=5
RECENT_LINES_COUNT=10

# === SESSION CONFIGURATION ===
# Maximum agents per session
MAX_AGENTS_PER_SESSION=5

# Maximum total sessions
MAX_SESSIONS=10

# Maximum total agents across all sessions
MAX_AGENTS_TOTAL=20

# === GIT CONFIGURATION ===
# Auto-commit settings
AUTO_COMMIT_INTERVAL=30
COMMIT_MESSAGE_PREFIX="Auto-commit"
ENABLE_AUTO_PUSH=false

# === NOTIFICATIONS ===
ENABLE_DESKTOP_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=""
EMAIL_ALERTS=false

# === RESOURCE LIMITS ===
MEMORY_LIMIT_GB=8

# === SAFETY AND DEBUGGING ===
SAFETY_MODE=true
LOG_LEVEL="INFO"
DEBUG_MODE=false

# === AGENT CONFIGURATION ===
# Agent detection patterns
AGENT_DETECTION_PATTERNS="claude,node"

# Default messages
DEFAULT_CHECK_NOTE="Standard check-in"

# === NPM PACKAGE CONFIGURATION ===
CLAUDE_NPM_PACKAGE="@anthropic-ai/claude-code"

# === COMMAND ALIASES ===
# Enable command aliases in shell
ENABLE_SHELL_ALIASES=true

# === BACKUP AND RECOVERY ===
ENABLE_AUTO_RECOVERY=true
BACKUP_INTERVAL_MINUTES=60
MAX_BACKUP_COUNT=10